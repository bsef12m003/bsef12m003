@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SignIn";
}

@model EAD_MVC4.Models.User

<script type="text/javascript" src="scripts/jquery.js"></script>

<script src="scripts/jquery.validate.js" type="text/javascript"></script>

<script src="scripts/siteLib.js" type="text/javascript"></script>
<script src="scripts/newUserScripts.js" type="text/javascript"></script>

<link href="styles/newUserStyles.css" media="all" type="text/css" rel="stylesheet" />




<div style="margin-left:50px; width:800px">


<div id="formContainer">

<div id="headingRow" style="color:yellow">New User Registration</div>

<form action="\Home\saveUser" method="post" enctype="multipart/form-data" id="userForm">

<div class="row">
    <div class="cell cellLeft">First Name</div>
    <div class="cell cellRight">
    <input type="text" id="firstName" name="firstName" value="" /><span id="firstNameError"></span></div>
	<div class="clearBox"></div>
</div>

<div class="row c2">
    <div class="cell cellLeft">Middle Name</div>
    <div class="cell cellRight">
    <input type="text" id="middleName" name="middleName" value="" /><span id="middleNameError"></span>
    </div>
	<div class="clearBox"></div>
</div>

<div class="row">
    @*@Html.LabelFor(m => m.lname);
    @Html.TextBoxFor(m => m.lname);*@
    <div class="cell cellLeft">Last Name</div>
    <div class="cell cellRight">
    <input type="text" id="lastName" name="lastName" value="" /><span id="lastNameError"></span>
    </div>
    <div class="clearBox"></div>
</div>

<div class="row c2">
    <div class="cell cellLeft">Email</div>
    <div class="cell cellRight">
    <input type="text" id="email" name="email" value="" /><span id="emailError"></span>
	</div>
	<div class="clearBox"></div>
</div>

<<div class="row">
    <div class="cell cellLeft">User Name</div>
    <div class="cell cellRight">
    <input type="text" id="userName" name="userName" value="" /><input type="button" id="b1" value="Check" /><br /></div>
    <div id="result"></div>
        <span id="userNameError"></span>
    </div>
	<div class="clearBox"></div>
</div>
        <script>

            $(document).ready(function () {

                

                $('#b1').click(function () {

                    var userName = $('#firstName').val();

                    //alert('User Name ='+ userName);
                    
                    $.getJSON("/Home/CheckUserName?UserName=" + userName, function (data) {
                      
                        if (data == true) {
                            $('#result').text("User already exists in database");

                        }
                        else {
                            $('#result').text("User Name is available");
                        }
                    });

                });

            });
    </script>

    </div>


<div class="row c2">
    <div class="cell cellLeft">Password</div>
    <div class="cell cellRight">
    <input type="password" id="pass1" name="pass1" value="" /><span id="pass1Error"></span>
    </div>
	<div class="clearBox"></div>
</div>

<div class="row">
    <div class="cell cellLeft">Re-type Password</div>
    <div class="cell cellRight">
    <input type="password" id="pass2" name="pass2" value="" /><span id="pass2Error"></span>
    </div>
	<div class="clearBox"></div>
</div>

<div class="row">
    <div class="cell cellLeft">Gender : </div>
    <div class="cell cellRight">
   
    Male <input type="radio" id="male" name="gender" value="male" />
    Female <input type="radio" id="female" name="gender"  value="female"/>
    <span id="genderError"></span>
	</div>
	<div class="clearBox"></div>	
</div>

<div class="row">
    <div class="cell cellLeft">Date Of Birth</div>
    <div class="cell cellRight">
    <span id="dayC"></span>
     - 
    <span id="monthC"></span>
     - 
    <span id="yearC"></span>
     
    <span id="dobError"></span>
    </div>
	<div class="clearBox"></div>
</div>


<div class="row">
    <div class="cell cellLeft">Country</div>
    <div class="cell cellRight">
    <span id="countryC"></span>
    
    <span id="countryError"></span>
    </div>

	<div class="clearBox"></div>
</div>

<div class="row c2">
    <div class="cell cellLeft">Profile Image </div>
    <div class="cell cellRight"><input type="file" id="profileImage" name="profileImage" />
    </div>
	<div class="clearBox"></div>
</div>

<div class="row">
    <div class="cell cellLeft">Captcha </div>
    <div class="cell cellRight"><input type="text" id="captcha" name="captcha" /><span id="captchaError"></span>
    </div>
	<div class="clearBox"></div>
</div>

<div class="row c2" style="text-align:center;">
	<input type="submit" value="Register" />
	<div class="clearBox"></div>
</div>

</form>

</div>
</div>